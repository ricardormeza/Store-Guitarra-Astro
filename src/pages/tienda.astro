---
import Layout from '../layouts/Layout.astro';
import Guitarra from '../components/Guitarra.astro';

const url =`${import.meta.env.PUBLIC_API_URL}/productos?populate=imagen`;
const respuesta = await fetch(url);
const {data} = await respuesta.json();

---

<Layout title="Tienda." description="Página de Tienda y lo que hacemos">
	<main class="contenedor">
		<h1 class="heading">Nuestra colección</h1>

		<div class="grid">
			{data?.map(guitarra => (
				<Guitarra
					nombre={guitarra.attributes.nombre}
					descripcion={guitarra.attributes.descripcion}
					url={guitarra.attributes.url}
					precio={guitarra.attributes.precio}
					imagen={guitarra.attributes.imagen.data.attributes.formats.medium.url}
				/>
			))}
		</div>
	</main>
</Layout>

